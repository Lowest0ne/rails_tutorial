<% provide(:title, 'Sign in') %>
<h1>Sign in</h1>

<div class="row">
  <div class="span-6 offset3">
    <%= form_tag sessions_path do %>

    <%= label_tag :email %>
    <%= email_field(:session, :email) %>


    <%= label_tag :password %>
    <%= password_field_tag(:password) %>
  <%= submit_tag("Search") %>
    <% end %>

    <p>New User? <%= link_to "Sign up now", signup_path %></p>

  </div>

</div>
